{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            height: 100vh;
            background-color: #f0f2f5;
        }

        .container {
            text-align: center;
            background-color: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        }

        .btn {
            margin: 5px;
            padding: 10px 20px;
        }
    </style>

    <div class="container">
        <h1>Posts</h1>

        {% for flash in app.flashes('success') %}
            <div class="alert alert-success">
                {{ flash }}
            </div>
        {% endfor %}
        {% for flashError in app.flashes('error') %}
            <div class="alert alert-danger" role="alert">
                {{ flashError }}
            </div>
        {% endfor %}

        {% for post in posts %}
            {#            <h2>{{ post.title }}</h2>#}
            {#            <p>{{ post.body }}</p>#}
        {% endfor %}

        <a href="{{ path('app_post_new') }}" class="btn btn-primary">New post</a>
        <a href="{{ path('app_post_show', { 'id': 1 }) }}" class="btn btn-primary">Show post</a>
        <a href="{{ path('app_post_edit', { 'id': 1}) }}" class="btn btn-primary">Edit post</a>
        <a href="{{ path('app_post_delete', { 'id': 1}) }}" class="btn btn-primary">Delete post</a>
        {#        <a href="{{ path('app_post_image') }}" class="btn btn-primary">post image?</a>#}
        <br>
        <br>
        <br>
        <a href="{{ path('app_homepage') }}" class="btn btn-info">Back to home</a>
    </div>
{% endblock %}