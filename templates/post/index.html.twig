{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            height: 100vh;
            background-color: #f0f2f5;
        }

        .container {
            text-align: center;
            background-color: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        }

        .btn {
            margin: 5px;
            padding: 10px 20px;
        }

        .card .action-buttons {
            position: absolute;
            top: 10px;
            right: 10px;
            display: none;
            gap: 5px;
        }

        .card:hover {
            background-color: lightgray;
            font-size: 18px;
        }

        .card:hover .action-buttons {
            display: flex;
        }

        .action-buttons button {
            padding: 5px 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            background: white;
            cursor: pointer;
        }

        .action-buttons button:hover {
            background: #eee;
        }
    </style>

    <div class="container">
        <h1>Posts</h1>

        {% for flash in app.flashes('success') %}
            <div class="alert alert-success">
                {{ flash }}
            </div>
        {% endfor %}
        {% for flashError in app.flashes('error') %}
            <div class="alert alert-danger" role="alert">
                {{ flashError }}
            </div>
        {% endfor %}

        <a href="{{ path('app_post_new') }}" class="btn btn-primary">New post</a>
        {# TODO: id hier niet hardcoded #}
        <a href="{{ path('app_post_show', { 'id': 1 }) }}" class="btn btn-primary">Show post</a>
        <a href="{{ path('app_post_edit', { 'id': 1}) }}" class="btn btn-primary">Edit post</a>
        <a href="{{ path('app_post_delete', { 'id': 1}) }}" class="btn btn-primary">Delete post</a>
        {#        <a href="{{ path('app_post_image') }}" class="btn btn-primary">post image?</a>#}

        <a href="{{ path('app_homepage') }}" class="btn btn-info">Back to home</a>

        <div class="row">
            {% for post in posts %}
                <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="action-buttons">
                            <button>Edit</button>
                            <button>Delete</button>
                            <button>Share</button>
                        </div>
                        {% if imagesData[loop.index0] is not null %}
                            <img
                                    src="data:{{ imagesMimeType[loop.index0] }};base64,{{ imagesData[loop.index0] }}"
                                    class="card-img-top"
                                    alt="Description of the image">
                        {% else %}
                            <div class="card-img-top" style="background-color: white; width: 100%; height: 200px;">
                            </div>
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ post.content }}</h5>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}