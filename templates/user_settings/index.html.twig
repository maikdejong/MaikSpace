{% extends 'base.html.twig' %}

{% block title %}User settings{% endblock %}

{% block body %}
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            height: 100vh;
            background-color: #f0f2f5;
        }

        .container {
            text-align: center;
            background-color: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        }

        .profile-picture-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 20px;
        }

        .profile-picture {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
        }

        .no-profile-picture {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background-color: #f0f2f5;
        }

        .btn {
            margin: 5px;
            padding: 10px 20px;
        }
    </style>

    <div class="container">
        <h1>User Settings</h1>

        {% for flash in app.flashes('success') %}
            <div class="alert alert-success">
                {{ flash }}
            </div>
        {% endfor %}
        {% for flashError in app.flashes('error') %}
            <div class="alert alert-danger" role="alert">
                {{ flashError }}
            </div>
        {% endfor %}

        {{ form_start(form) }}
        <div class="profile-picture-container">
            {% if imagesData['profile_picture'] is not null %}
                <img src="{{ path('app_user_settings_image', {'id': user.usersettings.id}) }}" class="profile-picture" alt="Profile Picture">
            {% else %}
                <div class="no-profile-picture"></div>
            {% endif %}
        </div>
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">Save Settings</button>
        {{ form_end(form) }}

        <a href="{{ path('app_homepage') }}" class="btn btn-info">Back to Home</a>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.clickable-card').forEach(card => {
                card.addEventListener('click', function(e) {
                    if (!e.target.closest('.action-buttons')) {
                        window.location.href = this.dataset.href;
                    }
                });
            });
        });
    </script>
{% endblock %}