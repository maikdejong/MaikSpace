{% extends 'base.html.twig' %}

{% block title %}2fa Activation{% endblock %}

{% block body %}
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f0f2f5;
        }
        .container {
            text-align: center;
            background-color: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }
        h1 {
            margin-bottom: 20px;
        }
        img {
            margin-top: 20px;
            max-width: 100%;
            height: auto;
        }
    </style>

    <div class="container">
        <h1>2FA Activation</h1>
        <p>Use Authy or Google Authenticator to Scan the QR Code</p>

        <img src="{{ path('app_2fa_qrcode') }}" alt="2fa QR Code">
        <br><br>
        <a href="{{ path('app_confirm_2fa') }}" class="btn btn-primary">Confirm!</a>
    </div>
{% endblock %}
